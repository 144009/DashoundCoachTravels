        @Html.LabelFor(model => model.NumFlat, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NumFlat, new { @class = "form-control", Value = ViewBag.NumFlat })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Town, new { @class = "col-md-2 control-label" })
