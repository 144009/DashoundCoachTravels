@model DashoundCoachTravels.Models.DeleteTripLocationsViewModel
@using DashoundCoachTravels.Helpers
@using Microsoft.AspNet.Identity

<div id="SubPagesTitle">
    <h1>Delete location from current trip</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div id="SubpagesAdminButtons">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <button type="submit" class="btn btn-default">
                        <i class="glyphicon glyphicon-trash"></i> Delete
                    </button>
                    <a href="@Url.Action("Index", new { thisTripId = Model.TripId })" class="btn btn-default">
                        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                        Back to list
                    </a>
                </div>
            }
    </div>
</div>

<section id="pages">
    <div id="SubpagesMainContent">
        <div class="row">
            <div class="col-xs-12">
                <div class="container" id="SubpagesTableList">
                    <table class="table-responsive table-striped" id="SubpagesTableList">
                        <thead id="SubpagesTableList">
                            <tr id="SubpagesTableList-head">
                                <th>
                                    @Html.DisplayNameFor(model => model.Country)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Town)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    Location Photo
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="SubpagesTableList">
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.Country)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Town)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Description)
                                </td>
                                <td>
                                    @if (!String.IsNullOrEmpty(Model.LocationImage))
                                    {
                                        <img src="@Model.LocationImage" class="img-thumbnail" alt="Thumbnail" width="200" height="200">
                                    }
                                    else
                                    {
                                        <img src="~/media/default.jpg" class="img-thumbnail" alt="Thumbnail" width="200" height="200">
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>