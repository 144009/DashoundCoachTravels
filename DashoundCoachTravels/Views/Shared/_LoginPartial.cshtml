@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    <li>
        <i id="Login" class="fa fa-user loginIcon" aria-hidden="true"></i>
    </li>
    <li>
        @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { id="registerLink", title = "Manage" })
    </li>
    <li id="accountNavLine"> | </li>
    <li>
        <a id="LogOff" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
    </li>
</ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li>
        <i id="Login" class="fa fa-user loginIcon" aria-hidden="true"></i>
    </li>
    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li> 
    <li id="accountNavLine"> | </li>
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
</ul>
}
